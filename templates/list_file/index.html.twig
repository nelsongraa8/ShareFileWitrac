{% extends 'base.html.twig' %}

{% block title %}Hello ListFileController!{% endblock %}

{% block body %}

    {% for file in files %}
        <p>
        <div>
            {{ file.name }}
            <br>
            {{ file.description }}
            <br>
            <a href='./uploads/file/{{ file.filename }}'>
                {{ file.filename }}
            </a>
        </div>
    {% endfor %}

{% endblock %}
